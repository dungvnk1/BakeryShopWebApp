@model IEnumerable<KingBakery.ViewModel.CustomerDetailViewModel>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách khách hàng thân thiết</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Họ và tên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Rank</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Họ và tên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Rank</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CusFullName</td>
                            <td>@item.CusEmail</td>
                            <td>@item.CusPhoneNumber</td>
                            <td>@item.CusRanking</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>