@model KingBakery.Models.Bakery
@using System.Security.Claims
<!doctype html>
<html>

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Thông tin bánh</title>
    <link rel="icon" href="/img/favicon.png">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <!-- animate CSS -->
    <link rel="stylesheet" href="/css/animate.css">
    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="/css/owl.carousel.min.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="/css/all.css">
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="/css/flaticon.css">
    <link rel="stylesheet" href="/css/themify-icons.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="/css/magnific-popup.css">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="/css/slick.css">
    <!-- style CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/detail.css" />
</head>

<body>
    <!--::header part start::-->
    @await Component.InvokeAsync("Header");
    <!-- Header part end-->
    <!-- breadcrumb part start-->
    <section class="breadcrumb_part single_product_breadcrumb">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb part end-->
    <!--================Single Product Area =================-->
    <div class="product_image_area">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="product_img_slide owl-carousel">
                        <div class="single_product_img">
                            <img src="@Model.Image" alt="#" class="img-fluid">
                        </div>
                        <div class="single_product_img">
                            <img src="@Model.Image" alt="#" class="img-fluid">
                        </div>
                        <div class="single_product_img">
                            <img src="@Model.Image" alt="#" class="img-fluid">
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="single_product_text text-center">
                        <h3>
                            @Model.Name
                        </h3>

                        @if (Model.BakeryOptions != null)
                        {
                            <p class="sizepart">Kích cỡ của bánh:</p>
                            var count = 1;
                            @foreach (var option in Model.BakeryOptions)
                            {


                                if (count == 1)
                                {
                                    <a asp-controller="BakeryOptions" asp-action="Details" asp-route-id="@option.ID"
                                       class="size_option active">
                                        @option.Size cm
                                    </a>
                                    count++;
                                }
                                else
                                {
                                    <a asp-controller="BakeryOptions" asp-action="Details" asp-route-id="@option.ID"
                                       class="size_option">
                                        @option.Size cm
                                    </a>
                                }

                            }



                            <p>
                                @Model.Description
                            </p>
                            <form asp-action="AddToCart" asp-controller="OrderItems" asp-route-id="@Model.BakeryOptions.ElementAt(0).ID" class="card_area" id="form_card_product">
                                <div class="product_count_area">
                                    <p>Còn @ViewData["Quantity"] bánh</p>
                                    <div class="product_count d-inline-block" style="background-color:transparent">
                                        <span class="product_count_item inumber-decrement" onclick="decreaseQuantity()"><i class="ti-minus"></i></span>
                                        <input class="product_count_item" type="text" name="quantity" id="quantity" value="1" min="1" max="@ViewBag.Quantity">
                                        <span class="product_count_item number-increment" onclick="increaseQuantity()"> <i class="ti-plus"></i></span>

                                        <script type="text/javascript">
                                            var maxQuantity = @ViewBag.Quantity;
                                        </script>
                                    </div>
                                    <p>Giá: @($"{@ViewBag.Price.ToString("#,##0")}đ")</p>
                                </div>
                                @{
                                    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
                                    var userRole = User.FindFirstValue(ClaimTypes.Role);
                                }
                                @if (userId != null)
                                {
                                    @if (userRole != "2")
                                    {
                                        <div class="add_to_cart">
                                            <button type="submit" class="btn_3" disabled>Thêm vào giỏ hàng</button>
                                        </div>
                                        <p style="color:red;font-style:italic">Đăng nhập bằng tài khoản khách hàng để mua hàng.</p>
                                    }
                                    else
                                    {
                                        <div class="add_to_cart">
                                            <button type="submit" class="btn_3">Thêm vào giỏ hàng</button>
                                        </div>
                                    }

                            </form>
                            var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
                            var userRole = User.FindFirstValue(ClaimTypes.Role);
                            @if (userId != null)
                            {
                                @if (userRole != "2")
                                {
                                    <div class="add_to_cart">
                                        <button type="submit" class="btn_3" disabled>Thêm vào giỏ hàng</button>
                                    </div>
                                    <div class="favourite_product">
                                        <form>
                                            <button type="submit" disabled><i class="far fa-star"></i></button>
                                        </form>

                                    </div>
                                    <p style="color:red;font-style:italic">Đăng nhập bằng tài khoản khách hàng để mua hàng.</p>
                                }
                                else
                                {

                                    <div class="add_to_cart">
                                        <button type="submit" form="form_card_product" class="btn_3">Thêm vào giỏ hàng</button>
                                    </div>
                                    <div class="favourite_product">
                                        <form method="post" asp-controller="Favourites" asp-action="Create" asp-route-id="@Model.BakeryOptions.ElementAt(0).ID" asp-route-id_pro="@Model.ID">
                                            <button type="submit"><i class="far fa-star"></i></button>
                                        </form>


                                    </div>

                                }

                            }
                            else
                            {
                                <div class="add_to_cart">
                                    <button type="submit" class="btn_3" disabled>Thêm vào giỏ hàng</button>
                                </div>
                                <div class="favourite_product">
                                    <form>
                                        <button type="submit" disabled><i class="far fa-star"></i></button>
                                    </form>

                                </div>
                                <p style="color:red;font-style:italic">Vui lòng đăng nhập để mua hàng.</p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--================End Single Product Area =================-->

    <!--::footer_part start::-->
    @await Component.InvokeAsync("Footer")
    <!--::footer_part end::-->
    <!-- jquery plugins here-->
    <script src="/js/jquery-1.12.1.min.js"></script>
    <!-- popper js -->
    <script src="/js/popper.min.js"></script>
    <!-- bootstrap js -->
    <script src="/js/bootstrap.min.js"></script>
    <!-- easing js -->
    <script src="/js/jquery.magnific-popup.js"></script>
    <!-- swiper js -->
    <script src="/js/swiper.min.js"></script>
    <!-- swiper js -->
    <script src="/js/mixitup.min.js"></script>
    <!-- particles js -->
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/jquery.nice-select.min.js"></script>
    <!-- slick js -->
    <script src="/js/slick.min.js"></script>
    <script src="/js/jquery.counterup.min.js"></script>
    <script src="/js/waypoints.min.js"></script>
    <script src="/js/contact.js"></script>
    <script src="/js/jquery.ajaxchimp.min.js"></script>
    <script src="js/jquery.form.js"></script>
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/mail-script.js"></script>
    <!-- custom js -->
    <script src="/js/custom.js"></script>
    <script src="/js/quantitybt.js"></script>
</body>

</html>




