@model IEnumerable<KingBakery.Models.Favourite>

@{
    ViewData["Title"] = "Favourites";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KingBakery</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <style>

        .img-container {
            max-width: 100px; /* Giới hạn chiều rộng của khung hình ảnh */
            max-height: 100px; /* Giới hạn chiều cao của khung hình ảnh */
            overflow: hidden; /* Ẩn phần hình ảnh vượt quá khung */
        }

            .img-container img {
                width: 100%; /* Đảm bảo hình ảnh chiếm toàn bộ chiều rộng của khung */
                height: auto; /* Giữ tỷ lệ hình ảnh */
            }

        body {
        }

        .table thead {
            background-color: pink;
        }

        .table tbody {
        }

            .table tbody tr td {
            }

            .table tbody tr:nth-child(even) {
            }

        .centered-content {
            text-align: center;
            margin-top: 20px; /* Adjust this value to move the title further down */
        }

            .centered-content h1 {
                margin-bottom: 20px;
            }

            .centered-content a {
                margin-bottom: 20px;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="centered-content">
            <h1>@ViewData["Title"]</h1>
        </div>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BakeryOption.Bakery.Image)</th>
                    <th>@Html.DisplayNameFor(model => model.BakeryOption.Bakery.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.BakeryOption.Size)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <div class="img-container">
                                <img class="img-fluid" src="@Html.DisplayFor(modelItem => item.BakeryOption.Bakery.Image)" alt="Bakery Image" />
                            </div>
                        </td>
                        <td>
                            <a class="text-dark font-weight-bold" asp-action="Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.BakeryOption.Bakery.Name)</a>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.BakeryOption.Size) cm</td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>



    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
