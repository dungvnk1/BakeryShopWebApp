@model KingBakery.Models.Favourite

@{
    ViewData["Title"] = "Are you sure you want to delete this?";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KingBakery</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <style>
        body {
            
            display: flex;
            justify-content: center; /* Căn giữa theo chiều ngang */
            align-items: center; /* Căn giữa theo chiều dọc */
            height: 100vh; /* Chiều cao tối đa của body */
            margin: 0; /* Loại bỏ margin mặc định */
        }

        .container {
            width: 100%;
        }

        .header {
            background-color: pink;
            padding: 20px;
            margin-bottom: 20px;
            text-align: center; /* Canh giữa tiêu đề */
        }

        .table-container {
            background-color: #8a2be2; /* Màu nền màu tím */
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            color: white;
        }

            .table-container h3 {
                text-align: center; /* Canh giữa thông báo */
            }

        .customer-table,
        .bakery-option-table {
            margin-bottom: 20px;
        }

            .customer-table th,
            .bakery-option-table th {
                color: pink; /* Màu chữ của header */
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="table-container">
            <div class="customer-table">
                <h4>Customer</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Customer)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Customer.UserID)
                    </dd>
                </dl>
            </div>
            <div class="bakery-option-table">
                <h4>Bakery Option</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.BakeryOption)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BakeryOption.ID)
                    </dd>
                </dl>
            </div>
            <div class="form-actions">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ID" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
